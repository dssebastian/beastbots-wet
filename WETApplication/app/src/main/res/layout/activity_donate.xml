<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#006064"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/wet_title" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:text="Here are some amounts that you can donate on the left, or you can add a custom amount on the right!"
        android:layout_gravity="left"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"


            xmlns:android="http://schemas.android.com/apk/res/android">

            <Button android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/five_dollar_donation_button"
                android:text="5$"
                android:background="@color/buttonColor"
                android:layout_marginRight="10dp" />



            <Button android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/ten_dollar_donation_button"
                android:layout_marginTop="5dp"
                android:background="@color/buttonColor"
                android:text="10$" />

            <Button android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/twenty_dollar_donation_button"
                android:layout_marginTop="5dp"
                android:background="@color/buttonColor"
                android:text="20$" />

            <Button android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/fifty_dollar_donation_button"
                android:layout_marginTop="5dp"
                android:background="@color/buttonColor"
                android:text="50$" />

            <Button android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/hundred_dollar_donation_button"
                android:layout_marginTop="5dp"
                android:background="@color/buttonColor"
                android:text="100$" />

            <Button android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/fivehundred_dollar_donation_button"
                android:layout_marginTop="5dp"
                android:background="@color/buttonColor"
                android:text="500$" />





        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Type in a custom value here!"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_blue_light"
                android:padding="5dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donate"

                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textSize="25dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Thank you for donating! All of the money you donate will be sent to the Red Cross"/>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>
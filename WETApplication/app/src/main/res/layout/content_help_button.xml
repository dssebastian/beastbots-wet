<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_light"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <TextView
        android:layout_width="wrap_content"
        android:text="Setup"
        android:textSize="50dp"
        android:padding="10dp"
        android:textColor="#1E88E5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:id="@+id/leak_Detection_id"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="Name Sensors"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:id="@+id/name_sensors_button"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="Name Floor"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="-50dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:id="@+id/name_floor_button"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="Sensor Location"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:id="@+id/sensor_location"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/shower_head" />
    <Button
        android:layout_width="wrap_content"

        android:layout_height="wrap_content" />

</LinearLayout>
